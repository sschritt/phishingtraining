{
  "ConnectionStrings": {
    "DefaultConnection": "Server=db;Database=phishingtraining;User=phishingtraining_admin;MultipleActiveResultSets=true",
    "HangfireConnection": "Server=db;Database=phishingtraining_hangfire;User=phishingtraining_admin"
  },
  "TemplateDataStorage": {
    "Path": "/var/templatedata"
  },
  "MailServer": {
    "Host": "mail",
    "Port": 25,
    "UseSsl": false,
    "IdentitySenderAddress": "phishing-training@example.com"
  },
  "HostedServices": {
    "DatabaseMigration": "disabled",
    "DatabaseSeeding": "disabled",
    "TestMailSending": "disabled"
  },
  "Logging": {
    "PathFormat": "/var/log/phishingtraining/log-{Date}.txt",
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
      "Hangfire": "Information"
    }
  },
  "ErrorLogging": {
    "PathFormat": "/var/log/phishingtraining/error-{Date}.txt",
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Error",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
      "Hangfire": "Error"
    }
  },

  "AllowedHosts": "*"
}
