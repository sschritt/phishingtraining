@{
    ViewData["Title"] = Localizer["My Campaigns"];
}
@model IList<PhishingTraining.Web.Models.Campaign.CampaignDisplayModel>

@if (Model.Count == 0)
{
    <div>@Localizer["You are not participating in any campaign"]</div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Start"]</th>
                <th>@Localizer["End"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var campaign in Model)
            {
                <tr id="@campaign.Id">
                    <td>@campaign.Name</td>
                    <td>@Html.DisplayFor(model => campaign.Start)</td>
                    <td>@Html.DisplayFor(model => campaign.End)</td>
                </tr>
            }
        </tbody>
    </table>
}
