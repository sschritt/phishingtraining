@model IEnumerable<PhishingTraining.Web.Models.Participant.ParticipantDisplayModel>

<partial name="_CampaignTabNav" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.UserName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.FirstName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.LastName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Birthdate)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Gender)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Email)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.PhoneNumber)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Street)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.City)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.Country)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.PetName)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.InstagramUser)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.FacebookUser)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.TikTokUser)]
            </th>
            <th>
                @Localizer[Html.DisplayNameFor(model => model.RealData)]
            </th>
            <th class="nosort">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstagramUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacebookUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TikTokUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealData)
            </td>
            <td>
                <form method="post" asp-action="RemoveParticipant">
                    <input type="hidden" id="userName" name="userName" value="@item.UserName">
                    @Html.Hidden("campaign", item.CampaignId)
                    <button type="submit" class="btn btn-outline-danger" value="RemoveParticipant"><i class="fas fa-trash"></i>&nbsp;@Localizer["Remove"]</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
